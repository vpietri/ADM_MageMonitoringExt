<config>
    <modules>
        <ADM_MageMonitoringExt>
            <version>1.0.0</version>
            <depends>
                <Hackathon_MageMonitoring />
            </depends>
        </ADM_MageMonitoringExt>
    </modules>

    <default>
        <!-- Insert a new tab with 2 widgets -->
        <magemonitoring>
            <tabs>
                <dummy>
                    <label>Dummy Widgets</label>
                    <title>Dummy Widgets</title>
                    <display_prio>500</display_prio>
                    <widgets>
                      <dummy_widget>
                        <impl>ADM_MageMonitoringExt_Model_Widget_Dummy_Dummy</impl>
                        <display_prio>10</display_prio>
                      </dummy_widget>
                      <cache_dummy_widget>
                        <impl>ADM_MageMonitoringExt_Model_Widget_Dummy_CacheDummy</impl>
                        <display_prio>20</display_prio>
                      </cache_dummy_widget>
                    </widgets>
                </dummy>
            </tabs>
        </magemonitoring>
    </default>

    <global>
        <helpers>
            <magemonitoring_ext>
                <class>ADM_MageMonitoringExt_Helper</class>
            </magemonitoring_ext>
        </helpers>

        <!-- declare widget folder so magemonitoring can pick up the widgets without tab config -->
        <widgets>
            <magemonitoring_ext>
                <folder>Model/Widget</folder>
            </magemonitoring_ext>
        </widgets>
    </global>

</config>